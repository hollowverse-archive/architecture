{
  "name": "architecture",
  "version": "1.0.0",
  "repository": "git@github.com:hollowverse/architectures.git",
  "author": "Hollowverse",
  "license": "Unlicense",
  "scripts": {
    "build": "for file in architectures/diagrams/*.puml; do puml generate -s $file -o ${file}.svg; done",
    "clown": "clown",
    "pre-push": "yarn build && yarn check-git-clean",
    "pre-commit": "yarn common-check",
    "lint-staged": "lint-staged",
    "common-check": "run-p -c --aggregate-output validate-filenames 'clown check' check-integrity",
    "check-integrity": "yarn check --integrity",
    "validate-filenames": "validate-filenames",
    "puml": "puml",
    "check-git-clean": "git diff --exit-code"
  },
  "devDependencies": {
    "@hollowverse/clown": "^3.1.1",
    "@hollowverse/config": "^33.0.0",
    "@hollowverse/validate-filenames": "^3.0.2",
    "babel-eslint": "^8.2.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^1.0.0-rc.1",
    "lint-staged": "^7.0.5",
    "node-plantuml": "^0.6.2",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.12.0",
    "yarnhook": "^0.2.0"
  },
  "lint-staged": {
    "**/*.md": [
      "prettier --write",
      "git add"
    ],
    "**/*.{j,t}s{x,}": [
      "prettier --write",
      "git add"
    ],
    "**/!(package).json": [
      "prettier --write",
      "git add"
    ],
    "**/*.js{x,}": [
      "eslint"
    ],
    "**/*.puml": [
      "yarn build"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-p -c --aggregate-output lint-staged pre-commit",
      "pre-push": "yarn pre-push",
      "post-merge": "yarnhook",
      "post-checkout": "yarnhook",
      "post-rewrite": "yarnhook"
    }
  }
}
